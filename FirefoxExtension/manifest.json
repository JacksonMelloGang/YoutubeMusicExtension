{
    "manifest_version": 2,
    "name": "YouRich",
    "description": "Youtube Rich Presence for Discord",
    "version": "1.0.0",
    "author": "Askyna",
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },

    "browser_action": {
        "default_title": "You Rich",
        "default_icon": {
          "19": "icons/icon.png",
          "38": "icons/icon.png"
        },
        "default_popup": "ui/popup/popup.html"
      },

    
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*", "https://www.music.youtube.com/watch*"],
            "js": ["index.js"]
        }
    ]

}